{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "concat",
            "detail": "files.jsonに記述された順にファイルを ___title___.mdに連結する",
            "type": "shell",
            "command": "python3 ./bin/concat.py",
            "group": "build"
        },
        {
            "label": "clean",
            "detail": "生成されたファイルを削除",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "___title___.html",
                "___title___.md",
                "___title___.pdf"
            ],
            "group": "build"
        }
    ]
}